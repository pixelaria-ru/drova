.section--delivery
  padding-top 80px

  h2
    max-width 800px
    text-align center
    font-size 36px
    font-weight 700
    line-height 48px
    margin auto
    color #333333
    margin-bottom 90px
    span
      color #98cb01
  img
    width 510px
    height 340px

.delivery__list
  max-width 400px
  width 100%
.delivery__item
  width 100%
  border-bottom 1px solid #e2e2e2
  &:first-child
    p
      font-weight 700
  &:last-child
    border-bottom 0px
  p
    color #333333
    font-size 18px
    font-weight 400
    line-height 28px
    padding 10px 25px
    &:first-child
      border-right 1px solid #e2e2e2
      width 245px

.footnote
  color #5c5c5c
  margin-top 60px
  font-size 18px
  font-weight 400
  line-height 28px
  padding-bottom 70px
  border-bottom 1px solid #e2e2e2
  &:before
    content ''
    background-image url(../images/shipped.png)
    display block
    margin-right 20px
    width 30px
    height 30px
    background-repeat no-repeat
    background-size contain
    background-position center
