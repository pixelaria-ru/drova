.section--best
  h2
    color #333333
    font-size 36px
    font-weight 700
    text-align center
    margin-bottom 80px
    span
      color #98cb01

.fire-wood
  border-bottom 1px solid #e2e2e2
  padding-bottom 80px
  margin-bottom 80px
  &:last-child
    margin-bottom 0
    border-bottom 0
    padding-bottom 0
  &.fire-wood--right
    .fire-wood__img
      order 1
      margin-right 0
      margin-left 40px
    .fire-wood__order
      order 2
      .button
        order -1
  &__img
    width 200px
    height 160px
    margin-right 40px
  &__info
    width calc(100% - 200px - 40px)
  &__order
    width 100%
    margin-top 56px
    .button
      padding-left 25px
      padding-right 25px

  &__item
    margin-right 25px
    &:last-child
      margin-right 0
    img
      max-width 30px
      max-height 30px
      object-fit contain
      margin-right 15px
    p
      color #333333
      font-size 18px
      font-weight 400
      white-space nowrap
  h3
    color #222222
    font-size 24px
    font-weight 700
    margin-bottom 20px
    span
      font-weight 400
      color #98cb01
      margin-left 15px
  p
    color #333333
    font-size 18px
    font-weight 400
    line-height 28px
