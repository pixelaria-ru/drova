.section--green-info
  background var(--green)
  padding 22px 0 31px
  margin-bottom 160px
  &:before
    content ''
    position absolute
    top -54px
    left 0
    right 0
    width 100%
    height 54px
    background-image url(../images/top-green.png)
    background-repeat-y no-repeat
  &:after
    content ''
    position absolute
    bottom -54px
    left 0
    right 0
    width 100%
    height 54px
    background-image url(../images/bottom-green.png)
    background-repeat-y no-repeat
.green-info__item
  margin-right 60px
  &:last-child
    margin-right 0
  .icon
    max-width 40px
    max-height 40px
    fill #fff
    margin-right 10px
  p
    color #ffffff
    font-size 18px
    font-weight 400
    white-space nowrap
