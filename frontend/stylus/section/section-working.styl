.section--working
  background-image url(../images/section-work.jpg)
  background-repeat no-repeat
  background-size cover
  background-attachment fixed
  padding-top 188px
  padding-bottom 180px
  margin-top 150px
  &:before
    content ''
    position absolute
    top -54px
    left 0
    right 0
    width 100%
    height 54px
    background-image url(../images/top-green.png)
    background-repeat-y no-repeat
  &:after
    content ''
    position absolute
    top 0
    left 0
    right 0
    width 100%
    height 54px
    background-image url(../images/bottom-green.png)
    background-repeat-y no-repeat
  h2
    color #ffffff
    font-size 36px
    font-weight 700
    text-align center
    margin-bottom 80px

.working__item
  width 33%
  justify-content center
  &:nth-child(1),&:nth-child(2),&:nth-child(3)
    margin-bottom 70px
  img
    width 80px
    height 80px
    border 3px solid #ffffff
    border-radius 50%
    margin-right 25px
  p
    color #ffffff
    font-size 20px
    font-weight 700
    line-height 28px
    max-width 170px
    span
      color #98cb01
