.section--order
  padding-bottom 110px
  h2
    display none
  &.fixed
    position fixed
    top 0
    right 0
    bottom 0
    left 0
    margin auto
    justify-content center
    align-items center
    z-index 9
    &:before
      content ''
      position absolute
      left 0
      right 0
      top 0
      bottom 0

      background-image url(../images/section-work.jpg)
      background-repeat no-repeat
      background-size cover
      filter blur(5px)
      transform scale(1.5)
      z-index -1
    &:after
      content ''
      position absolute
      left 0
      right 0
      top 0
      bottom 0
      background rgba(0, 0, 0, 0.49)
      transform scale(1.5)
      z-index -1
      cursor pointer
    img
      display none
    h2
      display block
      margin-bottom 40px
      width 100%
      color #333333
      font-size 36px
      font-weight 700
      text-align center
    &.step-two
      img
        display block
        transform scale(1)
        margin-bottom 20px
      .input-contacts
        display flex
        width 100%
        justify-content center
        margin-bottom 25px
        flex-wrap wrap

        input
          margin-right 15px
          &:last-child
            margin-right 0
      .label__num,.label__selected
        display none
      .form__order
        display flex
        flex-wrap wrap
        justify-content center


  .form__order
    box-shadow 0 0 10px rgba(0, 0, 0, 0.1)
    background-color #ffffff
    padding 40px
    .input-contacts
      display none


    p
      color var(--green)
      font-size 22px
      font-weight 400
      margin-right 25px
      white-space nowrap
      width 100px
  .button
    font-weight 300
  input,select
    box-shadow inset 0 0 10px rgba(0, 0, 0, 0.1)
    background-color #ffffff
    color #333333
    font-size 17px
    font-weight 400
    padding 20px 20px 19px
    &[type='number']
      width 100%
      padding-right 5px
  label
    position relative
    &.label__num
      max-width 110px
      margin-right 50px
    &.label__selected
      margin-right 20px
      max-width 215px
      width 100%
      &:hover
        .icon
          fill var(--green)
      .icon
        position absolute
        right 20px
        top 0
        bottom 0
        margin auto
        width 20px
        height 20px
        transform rotate(0deg)
        transition .33s
        &.active
          fill var(--green)
    span
      position absolute
      right 0
      width 30px
      height 30px
      cursor pointer
      &.minus
        bottom 0
        background-image url(../images/minus.png)
        background-repeat no-repeat
        background-color #f2f2f2
        background-position center
        &:hover
          background-color #e8e8e8
          background-image url(../images/minus.png)
          background-repeat no-repeat
          background-position center
      &.plus
        background-image url(../images/plus.png)
        background-repeat no-repeat
        background-color #f2f2f2
        background-position center
        &:hover
          background-color #e8e8e8
          background-image url(../images/plus.png)
          background-repeat no-repeat
          background-position center
  select
    appearance none
    width 100%
    border 0
    position relative
    z-index 2
    background-color transparent
    option
      padding 20px


  img
    max-width 280px
    max-height 200px
    object-fit contain
    transform scale(1.5)

.form__order
  margin-bottom 30px
.order__left-side

  .footnote
    .icon
      margin-right 10px
      width 20px
      height 20px

    &:first-child
      margin-right 25px
      .icon
        fill var(--green)
    &:last-child
      color #b3b3b3
      .icon
        fill #b3b3b3

  p
    color #98cb01
    font-size 18px
    font-weight 300
