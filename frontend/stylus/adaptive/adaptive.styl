@media(min-width 768px) and (max-width 1279px),(max-width 768px)
    .pd-80
      padding-left 40px
      padding-right 40px


    .header__navigation
      .list__item
        &:first-child
          display none
    .header__right p
      display none
    // Первый экран
    .section--initial-screen
      padding-top 190px
      padding-bottom 185px
      h1
        font-size 48px
      p
        font-size 36px
        margin-top 28px
        span
          display none
    // Зеленая секция
    .green-info__item
      margin-right 20px
    // Форма заказа
    .section--order
      justify-content center
      padding-left 20px
      padding-right 20px
      p
        font-size 18px
      img
        display none
    // Секция Лучшие сорта
    .section--best
      .fire-wood__list
        flex-wrap wrap
      .fire-wood__item
        margin-bottom 20px
      .fire-wood__order
        flex-wrap wrap
    .fire-wood.fire-wood--right
      .fire-wood__order
        .button
          order 1


    .footer
      .footer__right a,
      .footer__right p
        font-size 15px
      .footer__right p
        span
          display none

@media(max-width 1024px)
    .section--seo
      align-items flex-start
      padding-left 20px
      padding-right 20px
      padding 60px
      img
        width 200px
        height 150px
        margin-right 30px
@media(max-width 900px)
    // Секция Работаем для вас
    .section--working
      .working__list
        align-items baseline
      .working__item
        min-width 210px
        img
          display none
    // доставка
    .section--delivery
      img
        width 228px
        height 152px
      .j-c__s-b
        align-items center
        justify-content center
        flex-wrap wrap
      .footnote
        span
          width calc(100% - 50px)
          font-size 18px
          font-weight 400
          line-height 28px

    .footer
      .footer__navigation
          display none

@media(min-width 320px) and (max-width 767px),(max-width 320px)
  .pd-80
    padding-left 20px
    padding-right 20px
  // Шапка сайта
  .header
    justify-content flex-start
  .logotype
    h6
      display none
  .header__navigation
    position: absolute;
    background: #fff;
    padding: 50px;
    display: block;
    right: 20px
    top: 100px;
    border-radius: 4px 0 0 4px
    opacity 0
    z-index 9
    transform scale(0.5)
    transition .33s
    transform-origin top right
    &.active
      opacity 1
      z-index -9
      transform scale(1)
    .list__item
      margin-right 0
      margin-bottom 20px
      &:first-child
        display block
      a
        color #333
    .nav__list
      flex-direction column
  .header__hamburger
    display flex
  // Первый экран
  .section--initial-screen
    padding-top 130px
    padding-bottom 125px
    h1
      font-size 36px
      span
        display none
    p
      font-size 24px
      line-height 32px
  // Зеленая секция
  .green-info__list
    flex-wrap wrap
    align-items center
  .green-info__item
    margin-bottom 25px

  // Форма заказа
  .section--order
    *
      &:last-child
        flex-wrap wrap
        justify-content center
        .footnote
          margin-right 0
          margin-bottom 15px
          span
            width calc(100% - 30px)
    .form__order
      padding 30px
      flex-wrap wrap
      justify-content center

    label
      &.label__selected
        width 100%
        max-width 100%
        margin-right 0
      &.label__num
        margin-top 20px
        margin-right 0
        order 2
    p
      margin-top 20px
      order 1
    button
      margin-top 20px
      order 3
      margin-left 20px
  // Секция Лучшие сорта
  .section--best
    padding-left 20px
    padding-right 20px

  .fire-wood
    &:nth-child(even)
      .fire-wood__order
        .button
          margin-left 50px
          left 0
  .fire-wood
    &:nth-child(odd)
      .fire-wood__order
        .button
          right 0
          margin-right 50px
  .fire-wood__order
    .button
      margin-top -100px
      position absolute
      span
        display none


@media(max-width 700px)
  // Секция Лучшие сорта
  .section--best
    .fire-wood
      margin-bottom 40px
      padding-bottom 40px
    .fire-wood__info
      order -1
      width 100%
    .fire-wood__order,.fire-wood__list
      justify-content center
    .fire-wood__img
      margin-right auto
      margin-left auto
    .fire-wood.fire-wood--right
      .fire-wood__img
        margin-right auto
        margin-left auto
      .button
        order -1
    .button
      position relative
      margin-top 0
      padding-right 55px
      padding-left 55px
      order -1
      margin-bottom 20px

    .fire-wood:nth-child(2n)
      .fire-wood__order
        .button
          margin-left 0
    .fire-wood:nth-child(odd)
      .fire-wood__order
        .button
          margin-right 0
  // доставка
  .section--delivery
    img
      order -1
      margin-bottom 30px
  .section--seo
    flex-wrap wrap
    padding 40px
    img
      width 100%
      max-width 100%
      margin-right 0
      margin-bottom 30px
      height 300px
  .footer .container:last-child
    flex-wrap wrap
    .footer-bottom__left,
    .footer-bottom__right
      margin-bottom 10px
@media(max-width 510px)
  .footer .container:first-child
    justify-content center
    flex-wrap wrap
    .footer__left,.footer__right
      margin-bottom 30px
  .footer .container:last-child
    justify-content center
    .footer-bottom__left
      flex-wrap wrap
      text-align center
      p
        display none
      a
        width 100%
        margin-right 0
        border-right 0
        padding-right 0
        margin-bottom 15px
        font-size 16px
@media(max-width 485px)
  // Зеленая секция
  .green-info__list
    flex-direction column
    align-items center
  .green-info__item
    margin-right 0px
    margin-bottom 25px
  // Форма заказа
  .section--order
    *
      &:last-child
        justify-content flex-start
    button
      width 100%
      margin-left 0
    .form__order
      p
        margin-right 0

  // Секция Лучшие сорта
  .section--best
    h2
      font-size 24px
      line-height 32px
    .fire-wood__info
      h3
        font-size 18px
    .fire-wood__list
      display none
  // Секция Работаем для вас
  .section--working
    padding-top 120px
    padding-bottom 60px
    h2
      display none

    .working__item
      margin-bottom 30px
      width 100%
      text-align center
      p
        max-width 100%
  // доставка
  .section--delivery
    h2
      font-size 24px
      font-weight 700
      line-height 32px
    .delivery__item
      p
        padding 10px 0px
        &:first-child
          width 175px
        &:last-child
          padding-left 20px
@media(max-width 360px)
  .section--seo
    img
      display none
  .footer .container:first-child
    .logotype
      img
        margin-right 0
    .footer__right
      text-align center
      flex-wrap wrap
      justify-content center
      p
        width 100%
        border-right 0
        margin-bottom 20px
        padding-right 0
        margin-right 0
