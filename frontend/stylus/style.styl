@import 'inc/fonts.styl'
@import 'inc/reset.styl'

:root
  --green #98cb01
.flex
  display flex
.f-w__w
  flex-wrap wrap
.j-c__s-b
  justify-content space-between
.j-c__c
  justify-content center
.a-i__c
  align-items center
.p__r
  position relative

.h_b-l
  position relative
  &:after
    content ''
    position absolute
    bottom -4px
    left 0
    transition .33s
    width 0%
    height 1px
    background #fff
  &:hover
    &:after
      width 100%

.container
  max-width 1280px
  margin auto
  left 0
  right 0
.pd-80
  padding-left 85px
  padding-right 85px
.button
  border-radius 30px
  padding 19px 46px
  font-size 18px
  font-weight 700
  display inline-block
  transition .33s
  border 1px solid transparent
  &.button--green
    background var(--green)
    color #fff
    &:hover
      background 0
      color var(--green)
      border 1px solid var(--green)
  &.button--green-empty
    color var(--green)
    border 1px solid var(--green)
    &:hover
      color #fff
      background var(--green)
.main
  transition .55s
  &.active
    filter blur(5px )
@import 'inc/header.styl'
@import 'inc/footer.styl'

