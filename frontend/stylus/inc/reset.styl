*
  margin 0
  padding 0
  font-size 100%
  line-height 100%
  box-sizing border-box
button
  cursor pointer
  border 0
ul
  list-style none
a
  text-decoration none
body
  font-family 'Alegreya Sans SC', sans-serif

::selection
  background var(--green)
  color #fff
img,video
  width 100%
  height 100%
  object-fit cover

input,select
  border 0
  outline 0

input[type='submit']
  + label
    cursor pointer
